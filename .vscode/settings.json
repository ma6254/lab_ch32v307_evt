{
  "files.autoGuessEncoding": false,
  "files.encoding": "utf8",
  "C_Cpp.exclusionPolicy": "checkFilesAndFolders",
  "files.exclude": {
    ".cproject": true,
    "*.wvproj": true,
    "obj/": true,
  },
  "editor.rulers": [
    80,
    120
  ],
  "todohighlight.include": [
    "**/*.md",
    "**/*.c",
    "**/*.h"
  ],
  "files.defaultLanguage": "c",
  "[markdown]": {
    "files.encoding": "utf8",
  }
}